{
  "name": "Minimal Youtube",
  "version": "1.0",
  "description": "This extension allows you to view youtube videos with less distractions.",
  "permissions": ["activeTab", "declarativeContent", "storage", "browsingData", "clipboardWrite", "clipboardRead"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "manifest_version": 2
}
